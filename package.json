{
  "name": "linux-tutorial-cms",
  "version": "1.0.0",
  "description": "A modern, fully customizable CMS for creating beautiful tutorial websites with React and Rust",
  "author": "zerox80",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zerox80/LinuxTutorialCMS"
  },
  "keywords": [
    "cms",
    "tutorial",
    "linux",
    "react",
    "rust",
    "education",
    "learning-platform",
    "content-management",
    "admin-panel"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "export-content": "cargo run --manifest-path backend/Cargo.toml --bin export_content",
    "import-content": "cargo run --manifest-path backend/Cargo.toml --bin import_content"
  },
  "dependencies": {
    "dompurify": "^3.2.2",
    "highlight.js": "^11.10.0",
    "i18next": "^23.11.5",
    "katex": "^0.16.25",
    "lucide-react": "^0.552.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.1.5",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.5",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jsdom": "^25.0.1",
    "patch-package": "^8.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "vite": "^7.1.12"
  }
}
