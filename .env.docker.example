# Docker Compose Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control!

# JWT Configuration
# CRITICAL: Must be at least 32 characters long!
# Generate with: openssl rand -base64 48
JWT_SECRET=

# Admin Credentials
# IMPORTANT: Password must be at least 12 characters long!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# Optional: CORS Configuration
# Comma-separated list of allowed frontend origins
# Default: http://localhost:8489
# FRONTEND_ORIGINS=http://localhost:8489,https://yourdomain.com

# Optional: Rust log level
RUST_LOG=info
